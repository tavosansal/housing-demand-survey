{{#survey-frame}}
    <div class="survey-nav">
        <div class="nav-section-wrapper">
            {{#link-to 'demographics' class="nav-section section-end"}}
                Demographics
            {{/link-to}}
            {{#link-to 'budget' class="nav-section"}}
                Budget
            {{/link-to}}
            {{#link-to 'location' class="nav-section"}}
                Location
            {{/link-to}}
            {{#link-to 'housing-type' class="nav-section section-end"}}
                Housing Type
            {{/link-to}}
        </div>
        <div class="nav-section-wrapper">
            {{#link-to 'housing-size' class="nav-section"}}
                Unit Plan
            {{/link-to}}
            {{#link-to 'housing-quality' class="nav-section"}}
                Quality
            {{/link-to}}
            {{#link-to 'amenities' class="nav-section active"}}
                Amenities
            {{/link-to}}
        </div>
    </div>
    <div class="survey-header">
        <h1>Amenities</h1>
        <p>Fill out some details about your preferred housing type</p>
    </div>
    <div class="survey-body">
        <div class="amenities">
            <div class="amenities-parking">
                <h4>Parking</h4>
                <hr>
                <div class="amenities-parking-row">
                    <p>1 Parking Stall</p>
                    {{#paper-radio toggle=true value="Buy" groupValue=toggleValue onChange=(action (mut toggleValue))}}
                        On-site
                    {{/paper-radio}}
                    {{#paper-radio toggle=true value="Buy" groupValue=toggleValue onChange=(action (mut toggleValue))}}
                        Nearby
                    {{/paper-radio}}
                </div>
                {{#paper-button}}
                    {{paper-icon "add-circle"}}
                    Add A Parking Stall
                {{/paper-button}}
            </div>
            <div class="amenities-building">
                <h4>Building Amenities</h4>
                <hr>
                <p>What would you like to have in your building?</p>
                <div class="amenities-list-wrapper">
                    <div class="amenities-list left">
                        <h5>Essential Amenities</h5>
                        <ul>
                            <li>Cardio Machines</li>
                            <li>Free Weights</li>
                            <li>Steam Room</li>
                            <li>Rooftop Lounge</li>
                            <li>Courtyard Lounge</li>
                            <li>In Unit Laundry</li>
                            <li>In Building Laundry</li>
                            <li>Childrens Play Area</li>
                            <li>Dog Run</li>
                            <li>Community Garden</li>
                            <li>Picnic Area</li>
                        </ul>
                    </div>
                    <div class="amenities-list-controls">
                        {{#paper-button raised=true mini=true class="edit-button"}}
                            {{paper-icon "arrow-back"}}
                        {{/paper-button}}
                        {{#paper-button raised=true mini=true class="edit-button"}}
                            {{paper-icon "arrow-forward"}}
                        {{/paper-button}}
                    </div>
                    <div class="amenities-list right">
                        <h5>Non-Essential Amenities</h5>
                        <ul>
                            <li>Cardio Machines</li>
                            <li>Free Weights</li>
                            <li>Steam Room</li>
                            <li>Rooftop Lounge</li>
                            <li>Courtyard Lounge</li>
                            <li>In Unit Laundry</li>
                            <li>In Building Laundry</li>
                            <li>Childrens Play Area</li>
                            <li>Dog Run</li>
                            <li>Community Garden</li>
                            <li>Picnic Area</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="survey-footer">
        {{#paper-button raised=true class='back-btn'}}
            {{#link-to 'housing-quality'}}Back{{/link-to}}
        {{/paper-button}}
        {{#paper-button raised=true primary=true class='next-btn'}}
            {{#link-to 'thank-you'}}Finish{{/link-to}}
        {{/paper-button}}
    </div>
{{/survey-frame}}
