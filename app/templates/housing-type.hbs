{{#survey-frame
  showSidebar=true}}
    <div class="survey-header">
        <h1>Housing Type</h1>
        <p>What type of home are you looking for?</p>
    </div>
    <div class="survey-body">
        <div class="housing-type">
            <div class="housing-type-family-toggle">
                <span>Rehab</span>
                {{#paper-switch class="paper-switch" value=housingTypePreference onChange=(action (mut housingTypePreference))}}
                    New Construction
                {{/paper-switch}}
            </div>
            <div class="housing-type-options-row">
                <div class="survey-hero-card">
                    <div class="survey-hero-options-row">
                        <div class="survey-hero-options-section">
                          {{#each housingTypes as |type|}}
                            <button class="survey-hero-option {{if (eq type.key housingType.key) "is-focused"}}" {{action "changeType" type}}>
                              {{type.value}}
                            </button>
                          {{/each}}
                        </div>
                    </div>
                    <div class="survey-card-image">
                        <h4>{{housingType.value}}</h4>
                        {{#paper-button raised=true mini=true class="hero-arrow back" onClick=(action 'previousType')}}
                            {{paper-icon "keyboard-arrow-left"}}
                        {{/paper-button}}
                        <div class="hero-image"></div>
                        {{#paper-button raised=true mini=true class="hero-arrow forward" onClick=(action 'nextType')}}
                            {{paper-icon "keyboard-arrow-right"}}
                        {{/paper-button}}
                        <p class="hero-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            Nullam laoreet imperdiet lectus sit amet gravida.
                            Pellentesque ac ligula ut tortor malesuada posuere nec non lectus.
                            Suspendisse scelerisque dui neque. Aliquam vel nisi sapien
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="survey-footer">
        {{#paper-button raised=true class='back-btn'}}
            {{#link-to 'location'}}Back{{/link-to}}
        {{/paper-button}}
        {{#paper-button raised=true primary=true class='next-btn' onClick=(action 'continue')}}
            Continue
        {{/paper-button}}
    </div>
{{/survey-frame}}
